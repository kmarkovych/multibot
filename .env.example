# Telegram Multibot System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://multibot:your_password_here@localhost:5432/multibot
DB_PASSWORD=your_password_here

# =============================================================================
# ADMIN BOT
# =============================================================================
# Token for the admin bot that controls other bots
ADMIN_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Comma-separated list of Telegram user IDs allowed to use admin bot
ADMIN_ALLOWED_USERS=123456789,987654321

# =============================================================================
# BOT TOKENS
# =============================================================================
# Add tokens for your bots here (referenced in bot config YAML files)

# Markdown to PDF Converter Bot
BOT_MD2PDF_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Other bots (examples):
# BOT_SUPPORT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# BOT_NOTIFICATION_TOKEN=0987654321:ZYXwvuTSRqponMLKjihGFEdcba

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# =============================================================================
# WEBHOOK (Optional - for webhook mode instead of polling)
# =============================================================================
WEBHOOK_ENABLED=false
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080

# =============================================================================
# HOT RELOAD
# =============================================================================
ENABLE_HOT_RELOAD=true
CONFIG_DIR=./config/bots
PLUGINS_DIR=./src/plugins/custom
